# ===========================================================================
# Variáveis de Ambiente para Deploy no Easypanel
# ===========================================================================
# Copie este arquivo e configure as variáveis no painel do Easypanel
# ===========================================================================

# ===========================================================================
# OBRIGATÓRIAS - Configure antes do deploy
# ===========================================================================

# Gere com: openssl rand -hex 64
SECRET_KEY_BASE=

# Senha segura para o PostgreSQL
POSTGRES_PASSWORD=

# ===========================================================================
# BANCO DE DADOS
# ===========================================================================

POSTGRES_USER=sure_user
POSTGRES_DB=sure_production

# ===========================================================================
# RAILS
# ===========================================================================

RAILS_ENV=production
RAILS_FORCE_SSL=true
RAILS_ASSUME_SSL=true
SELF_HOSTED=true

# ===========================================================================
# ONBOARDING
# ===========================================================================

# Opções: open, closed, invite_only
ONBOARDING_STATE=invite_only

# ===========================================================================
# OPENAI (OPCIONAL - INCORRE CUSTOS!)
# ===========================================================================

# Token de acesso da OpenAI
OPENAI_ACCESS_TOKEN=

# URI base (deixe vazio para usar padrão da OpenAI)
OPENAI_URI_BASE=

# Modelo a ser usado (ex: gpt-4, gpt-3.5-turbo)
OPENAI_MODEL=

# ===========================================================================
# SIMPLEFIN (OPCIONAL)
# ===========================================================================

# Logs detalhados do SimpleFIN (debug)
SIMPLEFIN_DEBUG_RAW=false

# Incluir transações pendentes
SIMPLEFIN_INCLUDE_PENDING=false

# ===========================================================================
# LUNCHFLOW (OPCIONAL)
# ===========================================================================

# Logs detalhados do Lunchflow (debug)
LUNCHFLOW_DEBUG_RAW=false

# Incluir transações pendentes
LUNCHFLOW_INCLUDE_PENDING=false

# ===========================================================================
# MARKET DATA (OPCIONAL)
# ===========================================================================

# API key do Twelve Data para dados de mercado
TWELVE_DATA_API_KEY=

# ===========================================================================
# LANGFUSE (OPCIONAL - OBSERVABILIDADE DE LLM)
# ===========================================================================

LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ===========================================================================
# DEBUG
# ===========================================================================

# Mostrar mensagens de erro detalhadas no chat
AI_DEBUG_MODE=false

# ===========================================================================
# OPENID CONNECT (OPCIONAL - SSO)
# ===========================================================================

OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER=
OIDC_REDIRECT_URI=https://seu-dominio.com/auth/openid_connect/callback

# ===========================================================================
# PORTA (geralmente gerenciado pelo Easypanel)
# ===========================================================================

PORT=3000
