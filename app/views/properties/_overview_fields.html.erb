<%# locals: (form:) %>

<div class="flex flex-col gap-2">
  <%= form.text_field :name,
                  label: t("properties.overview.name"),
                  placeholder: t("properties.overview.placeholder"),
                  required: true %>

  <%= form.select :subtype,
                Property::SUBTYPES.map { |k, v| [v[:long], k] },
                { prompt: t("properties.overview.select_type"), label: t("properties.overview.type") }, required: true %>

  <%= form.hidden_field :accountable_type, value: "Property" %>

  <%= form.fields_for :accountable do |property_form| %>
    <div class="flex items-center gap-2">
      <%= property_form.number_field :year_built,
                    label: t("properties.overview.year_built"),
                    placeholder: "1990",
                    min: 1500,
                    max: Time.current.year %>
    </div>

    <div class="flex items-center gap-2">
      <%= property_form.number_field :area_value,
                      label: t("properties.overview.area"),
                      placeholder: "1200",
                      min: 0 %>
      <%= property_form.select :area_unit,
                      [["Square Feet", "sqft"], ["Square Meters", "sqm"]],
                      { label: t("properties.overview.area_unit") } %>
    </div>
  <% end %>

</div>
